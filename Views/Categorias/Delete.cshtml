@model InventarioProductos.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Categorías</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
                </ol>
            </nav>
            <h1 class="display-5 text-danger">
                <i class="fas fa-trash-alt"></i> Eliminar Categoría
            </h1>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>¿Está seguro de que desea eliminar esta categoría?</strong>
        Esta acción es irreversible.
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-tags"></i> Detalles de la Categoría
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-id-card-alt"></i> @Html.DisplayNameFor(model => model.CategoriaId)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CategoriaId)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-tag"></i> @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Html.DisplayFor(model => model.Nombre)</strong>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-align-left"></i> @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Descripcion))
                            {
                                @Html.DisplayFor(model => model.Descripcion)
                            }
                            else
                            {
                                <small class="text-muted fst-italic">Sin descripción</small>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-cubes"></i> Productos asociados
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@(Model.Productos?.Count ?? 0)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-toggle-on"></i> @Html.DisplayNameFor(model => model.Activa)
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.Activa)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check"></i> Activa
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-times"></i> Inactiva
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.FechaCreacion)
                        </dt>
                        <dd class="col-sm-8">
                            @Model.FechaCreacion.ToString("dd/MM/yyyy")
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CategoriaId" />
                        @if (Model.Productos?.Count > 0)
                        {
                            <button type="button" class="btn btn-danger" disabled>
                                <i class="fas fa-ban"></i> No se puede eliminar
                            </button>
                            <div class="form-text text-danger mt-2">
                                Esta categoría tiene productos asociados y no se puede eliminar. Considere desactivarla.
                            </div>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirmar Eliminación
                            </button>
                        }
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar y volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>