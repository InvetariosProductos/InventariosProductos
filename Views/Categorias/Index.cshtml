@model IEnumerable<InventarioProductos.Models.Categoria>
@{
    ViewData["Title"] = "Gestión de Categorías";
}

<div class="container-fluid">
    <!-- Título y mensajes -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">
            <i class="fas fa-tags"></i> 
            @ViewBag.Titulo ?? "Gestión de Categorías"
        </h1>
        <div>
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Nueva Categoría
            </a>
        </div>
    </div>

    <!-- Mensajes de éxito/error -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Panel de filtros -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-filter"></i> Filtros de búsqueda
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label for="searchString" class="form-label">Buscar categoría:</label>
                    <input type="text" 
                           class="form-control" 
                           id="searchString" 
                           name="searchString" 
                           value="@ViewData["SearchString"]"
                    <div class="col-md-4">
                        <label for="SoloActives" class="form-label">Estado:</label>
                        <select class="form-select" id="SoloActives" name="SoloActives">
                            @{
                                var soloActivas = ViewData["SoloActives"]?.ToString();
                            }
                            <option value="true" selected="@(soloActivas == "True" ? "selected" : null)">Solo activas</option>
                            <option value="false" selected="@(soloActivas == "False" ? "selected" : null)">Todas (activas e inactivas)</option>
                        </select>
                    </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="btn-group w-100">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Acciones rápidas -->
    <div class="mb-3">
        <div class="btn-group" role="group">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-list"></i> Todas las categorías
            </a>
            <a asp-action="MasProductos" class="btn btn-outline-info">
                <i class="fas fa-chart-bar"></i> Más productos
            </a>
        </div>
        
        <div class="float-end">
            <small class="text-muted">
                Total de categorías: <strong>@Model.Count()</strong>
                | Activas: <strong>@Model.Count(c => c.Activa)</strong>
            </small>
        </div>
    </div>

    <!-- Tabla de categorías -->
    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                                <th class="text-center">Productos</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.Activa)</th>
                                <th class="text-center">Fecha Creación</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(!item.Activa ? "table-secondary" : "")">
                                    <td>
                                        <strong>@item.Nombre</strong>
                                        @if (!item.Activa)
                                        {
                                            <span class="badge bg-secondary ms-2">Inactiva</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Descripcion))
                                        {
                                            <span>@item.Descripcion</span>
                                        }
                                        else
                                        {
                                            <small class="text-muted fst-italic">Sin descripción</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.Productos?.Count > 0)
                                        {
                                            <span class="badge bg-primary">@item.Productos.Count</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-dark">0</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.Activa)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Activa
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times"></i> Inactiva
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <small>@item.FechaCreacion.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" 
                                               asp-route-id="@item.CategoriaId" 
                                               class="btn btn-outline-info btn-sm"
                                               title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" 
                                               asp-route-id="@item.CategoriaId" 
                                               class="btn btn-outline-primary btn-sm"
                                               title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            
                                            <!-- Botón cambiar estado -->
                                            <form asp-action="CambiarEstado" asp-route-id="@item.CategoriaId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" 
                                                        class="btn btn-outline-warning btn-sm" 
                                                        title="@(item.Activa ? "Desactivar" : "Activar")"
                                                        onclick="return confirm('@(item.Activa ? "¿Desactivar" : "¿Activar") la categoría @item.Nombre?')">
                                                    <i class="fas fa-@(item.Activa ? "toggle-off" : "toggle-on")"></i>
                                                </button>
                                            </form>
                                            
                                            <button type="button" 
                                                    class="btn btn-outline-danger btn-sm" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal"
                                                    data-id="@item.CategoriaId"
                                                    data-nombre="@item.Nombre"
                                                    data-productos="@(item.Productos?.Count ?? 0)"
                                                    title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-2x mb-2"></i>
            <h4>No hay categorías registradas</h4>
            <p>Comience agregando una nueva categoría haciendo clic en el botón "Nueva Categoría".</p>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Crear primera categoría
            </a>
        </div>
    }
</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> Confirmar eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea eliminar la categoría <strong id="deleteCategoryName"></strong>?</p>
                <div id="productWarning" class="alert alert-warning d-none">
                    <i class="fas fa-exclamation-triangle"></i>
                    Esta categoría tiene <strong id="productCount"></strong> producto(s) asociado(s). 
                    No se puede eliminar. Considere desactivarla en su lugar.
                </div>
                <div id="noProductsInfo" class="alert alert-info d-none">
                    <i class="fas fa-info-circle"></i>
                    Esta categoría no tiene productos asociados y se puede eliminar de forma segura.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">
                        <i class="fas fa-trash"></i> Eliminar categoría
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script para el modal de eliminación
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteModal');
            if (deleteModal) {
                deleteModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const categoryId = button.getAttribute('data-id');
                    const categoryName = button.getAttribute('data-nombre');
                    const productCount = parseInt(button.getAttribute('data-productos'));
                    
                    const deleteForm = document.getElementById('deleteForm');
                    const categoryNameElement = document.getElementById('deleteCategoryName');
                    const productWarning = document.getElementById('productWarning');
                    const noProductsInfo = document.getElementById('noProductsInfo');
                    const productCountElement = document.getElementById('productCount');
                    const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
                    
                    deleteForm.action = '@Url.Action("Delete", "Categorias")/' + categoryId;
                    categoryNameElement.textContent = categoryName;
                    productCountElement.textContent = productCount;
                    
                    if (productCount > 0) {
                        productWarning.classList.remove('d-none');
                        noProductsInfo.classList.add('d-none');
                        confirmDeleteBtn.disabled = true;
                        confirmDeleteBtn.classList.remove('btn-danger');
                        confirmDeleteBtn.classList.add('btn-secondary');
                        confirmDeleteBtn.innerHTML = '<i class="fas fa-ban"></i> No se puede eliminar';
                    } else {
                        productWarning.classList.add('d-none');
                        noProductsInfo.classList.remove('d-none');
                        confirmDeleteBtn.disabled = false;
                        confirmDeleteBtn.classList.remove('btn-secondary');
                        confirmDeleteBtn.classList.add('btn-danger');
                        confirmDeleteBtn.innerHTML = '<i class="fas fa-trash"></i> Eliminar categoría';
                    }
                });
            }

            // Auto-ocultar alertas después de 5 segundos
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert:not(.alert-info)');
                alerts.forEach(function(alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
}