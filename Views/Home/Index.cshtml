@{
    ViewData["Title"] = "Sistema de Inventario";
}

<div class="text-center">
    <h1 class="display-4">Sistema de Inventario de Productos</h1>
    <p class="lead">Gestiona tu inventario de manera eficiente</p>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-boxes"></i> Productos
                    </h5>
                    <p class="card-text">Administra tu catálogo de productos</p>
                    <a href="@Url.Action("Index", "Productos")" class="btn btn-primary">Ver Productos</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-tags"></i> Categorías
                    </h5>
                    <p class="card-text">Organiza productos por categorías</p>
                    <a href="@Url.Action("Index", "Categorias")" class="btn btn-success">Ver Categorías</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-truck"></i> Proveedores
                    </h5>
                    <p class="card-text">Gestiona tus proveedores</p>
                    <a href="@Url.Action("Index", "Proveedores")" class="btn btn-info">Ver Proveedores</a>
                </div>
            </div>
        </div>
    </div>
</div>
