@model InventarioProductos.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        Crear Nuevo Producto
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombres" class="form-label required"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Codigo" class="form-label required"></label>
                                <input asp-for="Codigo" class="form-control" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Precio" class="form-label required"></label>
                                <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label required"></label>
                                <input asp-for="Stock" class="form-control" type="number" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoriaId" class="form-label required"></label>
                                <select asp-for="CategoriaId" class="form-select" asp-items="@(ViewData["CategoriaId"] as SelectList)">
                                    <option value="">-- Seleccionar categoría --</option>
                                </select>
                                <span asp-validation-for="CategoriaId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProveedorId" class="form-label required"></label>
                                <select asp-for="ProveedorId" class="form-select" asp-items="@(ViewData["ProveedorId"] as SelectList)">
                                    <option value="">-- Seleccionar proveedor --</option>
                                </select>
                                <span asp-validation-for="ProveedorId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left me-1"></i>
                                Volver a la Lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Crear Producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
