@model InventarioProductos.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-trash-alt me-2"></i>
                        Eliminar Producto
                    </h2>
                </div>
                <div class="card-body">
                    <h3 class="card-text text-danger mb-4">
                        ¿Estás seguro de que quieres eliminar este producto?
                    </h3>

                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Codigo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Codigo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Precio)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Precio)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Stock)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Activo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Activo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Categoria)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Categoria.Nombre)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Proveedor)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Proveedor.Nombre)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
                        <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaActualizacion)</dt>
                        <dd class="col-sm-8">
                            @if (Model.FechaActualizacion.HasValue)
                            {
                                @Model.FechaActualizacion.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span>No disponible</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProductoId" />
                        <div class="d-flex justify-content-end">
                            <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>