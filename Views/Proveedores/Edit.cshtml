@model InventarioProductos.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Proveedores</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5">
                    <i class="fas fa-edit text-primary"></i>
                    Editar Proveedor
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-truck-moving"></i> Información del Proveedor
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="ProveedorId" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label required">
                                <i class="fas fa-building"></i> @Html.DisplayNameFor(m => m.Nombre)
                            </label>
                            <input asp-for="Nombre"
                                   class="form-control"
                                   placeholder="Ej: ABC Suministros S.A."
                                   maxlength="100"
                                   required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <div class="form-text">Máximo 100 caracteres - Debe ser único</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contacto" class="form-label">
                                <i class="fas fa-user-circle"></i> @Html.DisplayNameFor(m => m.Contacto)
                            </label>
                            <input asp-for="Contacto"
                                   class="form-control"
                                   placeholder="Nombre del contacto (opcional)"
                                   maxlength="100" />
                            <span asp-validation-for="Contacto" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label">
                                <i class="fas fa-phone"></i> @Html.DisplayNameFor(m => m.Telefono)
                            </label>
                            <input asp-for="Telefono"
                                   class="form-control"
                                   placeholder="Ej: +503 2222-3333 (opcional)"
                                   maxlength="20" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> @Html.DisplayNameFor(m => m.Email)
                            </label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="ejemplo@proveedor.com (opcional)"
                                   maxlength="100" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label">
                                <i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(m => m.Direccion)
                            </label>
                            <textarea asp-for="Direccion"
                                      class="form-control"
                                      rows="3"
                                      maxlength="300"
                                      placeholder="Dirección completa (opcional)"></textarea>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="Activo">
                                <label class="form-check-label" for="Activo">
                                    <i class="fas fa-@(Model.Activo ? "toggle-on text-success" : "toggle-off text-secondary")"></i> @Html.DisplayNameFor(m => m.Activo)
                                </label>
                            </div>
                            <div class="form-text">Los proveedores activos están disponibles para asociar a productos</div>
                        </div>

                        <div class="bg-light p-3 rounded mb-4">
                            <h6><i class="fas fa-info-circle"></i> Información automática:</h6>
                            <small class="text-muted">
                                • <strong>ID de proveedor:</strong> @Model.ProveedorId <br />
                                • <strong>Fecha de registro:</strong> @Model.FechaRegistro.ToString("dd/MM/yyyy") <br />
                                • <strong>Productos asociados:</strong> @(Model.Productos?.Count ?? 0)
                            </small>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#editForm').on('submit', function () {
                const submitBtn = $('#submitBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin"></i> Guardando...');
            });

            $('[name="Activo"]').on('change', function () {
                const label = $(this).siblings('label');
                const icon = label.find('i');
                if ($(this).is(':checked')) {
                    icon.removeClass('fa-toggle-off text-secondary').addClass('fa-toggle-on text-success');
                } else {
                    icon.removeClass('fa-toggle-on text-success').addClass('fa-toggle-off text-secondary');
                }
            });

            setTimeout(function () {
                $('.alert').fadeOut();
            }, 5000);
        });
    </script>

    <style>
        .required:after {
            content: " *";
            color: red;
        }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
}