@model IEnumerable<InventarioProductos.Models.Proveedor>

@{
    ViewData["Title"] = "Listado de Proveedores";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">
            <i class="fas fa-truck-moving text-primary"></i>
            Proveedores
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Crear Nuevo Proveedor
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list-alt"></i> Listado de Proveedores
            </h5>
            <div class="input-group w-50">
                <input type="text" id="searchInput" class="form-control" placeholder="Buscar por nombre, contacto, o email...">
                <span class="input-group-text"><i class="fas fa-search"></i></span>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <i class="fas fa-building text-info"></i> @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    <i class="fas fa-user-circle text-info"></i> @Html.DisplayNameFor(model => model.Contacto)
                                </th>
                                <th>
                                    <i class="fas fa-phone text-info"></i> @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th>
                                    <i class="fas fa-envelope text-info"></i> @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-check-circle text-success"></i> @Html.DisplayNameFor(model => model.Activo)
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-calendar-alt text-secondary"></i> Fecha de Registro
                                </th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="proveedoresTableBody">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Contacto)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td class="text-center">
                                        @if (item.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @item.FechaRegistro.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center text-nowrap">
                                        <a asp-action="Edit" asp-route-id="@item.ProveedorId" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ProveedorId" class="btn btn-sm btn-outline-info" title="Detalles">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ProveedorId" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning m-4 text-center" role="alert">
                    <i class="fas fa-exclamation-circle"></i> No se encontraron proveedores.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-ocultar alertas
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);

            // Búsqueda en tiempo real
            $('#searchInput').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#proveedoresTableBody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

<style>
    .btn-sm {
        margin: 0 2px;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>